{
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test"
      ]
    ],
    "type-case": [
      2,
      "always",
      "lower-case"
    ],
    "type-empty": [
      2,
      "never"
    ],
    "subject-case": [
      2,
      "never",
      [
        "sentence-case",
        "start-case",
        "pascal-case",
        "upper-case"
      ]
    ],
    "subject-empty": [
      2,
      "never"
    ],
    "subject-full-stop": [
      2,
      "never",
      "."
    ],
    "subject-max-length": [
      2,
      "always",
      120
    ],
    "body-leading-blank": [
      2,
      "always"
    ],
    "body-max-line-length": [
      0
    ],
    "footer-leading-blank": [
      2,
      "always"
    ],
    "header-max-length": [
      2,
      "always",
      120
    ]
  },
  "defaultIgnores": true,
  "helpUrl": "https://github.com/conventional-changelog/commitlint"
}
