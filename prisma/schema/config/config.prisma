// Database model for roles
model ConfigRole {
  id        Int      @id @unique @default(autoincrement())
  name      String   @unique
  guild_id  BigInt
  guild     Guild    @relation(fields: [guild_id], references: [guild_id])
  roles     BigInt[] @default([])
  users     BigInt[] @default([])
}

// Enum for config option types
enum ConfigOptionType {
  Checkbox
  Dropdown
  PermissionChoice
  TextBoxShort
  TextBoxLong
  NumberBox
  URLBox
  ColorPicker
}

// Database model for config options
model ConfigOption {
  id         Int               @id @unique @default(autoincrement())
  type       ConfigOptionType
  name       String
  value      String
  cog        Cog?              @relation(fields: [cogId], references: [id])
  command    Command?          @relation(fields: [commandId], references: [id])
  cogId      String?
  commandId  Int?
}

// Database model for cogs
model Cog {
  id           String       @id @unique
  commands     Command[]
  options      ConfigOption[] // Cog configuration is cog-wide, not command-specific
  name         String
  description  String
}

// Database model for commands
model Command {
  id           Int    @id @unique @default(autoincrement())
  cog          Cog    @relation(fields: [cogId], references: [id])
  cogId        String
  options      ConfigOption[] // Command configuration is command-specific
  name         String
  description  String
}

model GuildConfig {
  prefix               String?
  mod_log_id           BigInt?
  audit_log_id         BigInt?
  join_log_id          BigInt?
  private_log_id       BigInt?
  report_log_id        BigInt?
  dev_log_id           BigInt?
  jail_channel_id      BigInt?
  general_channel_id   BigInt?
  starboard_channel_id BigInt?
  perm_level_0_role_id BigInt?
  perm_level_1_role_id BigInt?
  perm_level_2_role_id BigInt?
  perm_level_3_role_id BigInt?
  perm_level_4_role_id BigInt?
  perm_level_5_role_id BigInt?
  perm_level_6_role_id BigInt?
  perm_level_7_role_id BigInt?
  base_staff_role_id   BigInt?
  base_member_role_id  BigInt?
  jail_role_id         BigInt?
  quarantine_role_id   BigInt?
  guild_id             BigInt  @id @unique
  guild                Guild   @relation(fields: [guild_id], references: [guild_id])

  @@index([guild_id])
}